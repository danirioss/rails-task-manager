<h1><%= @task.title.capitalize %></h1>

<div style="background-color:rgb(179, 179, 179); border: 1px; padding:10px;">
  <p><%= @task.details %></p>
</div>
<%# <p>Completed: <%= @task.completed %></p> %>

<%= form_with model: @task do |f| %>
  <%= f.check_box :completed %>
  <%= f.label "This task is completed" %>
<% end %>

<p><%= link_to "Back to list", tasks_path %></p>
<button><%= link_to "Edit",  edit_task_path %></button>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
